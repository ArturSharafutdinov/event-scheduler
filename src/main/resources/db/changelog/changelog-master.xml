<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    
    <changeSet id="09.1333" author="asharafutdinov">
        <createTable tableName="TYPE">
            <column name="TYPE_ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="PRODUCT">
            <column name="PRODUCT_ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="PRICE" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="TYPE_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_product_type_id" references="TYPE(TYPE_ID)"/>
            </column>
        </createTable>

        <createTable tableName="CITY">
            <column name="CITY_ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="POPULATION" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="CINEMA">
            <column name="CINEMA_ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="CITY_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_cinema_city_id" references="CITY(CITY_ID)"/>
            </column>
        </createTable>

        <createTable tableName="BILL">
            <column name="BILL_ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="BILL_DATE" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="DISCOUNT" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="SALE">
            <column name="SALE_ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="PRICE" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="COUNT" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="CITY_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_cinema_city_id" references="CITY(CITY_ID)"/>
            </column>
            <column name="PRODUCT_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_sale_product" references="PRODUCT(PRODUCT_ID)"/>
            </column>
        </createTable>

        <createTable tableName="BILL_SALES">
            <column name="BILL_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_bill_sales_bill" references="BILL(BILL_ID)"/>
            </column>
            <column name="SALE_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_bill_sales_sale" references="SALE(SALE_ID)"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="BILL_SALES" columnNames="BILL_ID,SALE_ID"/>
    </changeSet>

